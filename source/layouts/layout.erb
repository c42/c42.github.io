  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || 'C42 Engineering: Expert Ruby and Rails engineering. Offshore.' %></title>
    <meta name="description" content="<%= current_page.data.description || 'We build expertly designed and engineered Ruby on Rails web applications, offshore.' %>">
    <meta name="keywords" content="<%= current_page.data.keywords || 'Ruby on Rails, India, Agile, jRuby, Open-Source Software, tdd, bdd, continuous integration' %>">
    <meta name="viewport" content="width=device-width">

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

    <%= stylesheet_link_tag 'application' %>
    <script src="js/vendor/modernizr-2.6.1.min.js"></script>
  </head>
  <body>
    <header>
      <h1>engineering perfection on rails</h1>
      <%= image_tag "logo.png", :alt => "C42 logo", :class => "logo" %>
      <div class="navigation">
	<ul>
	  <li class='home-nav <%= current_page.data.homepage_selected_class %>'>
	    <%= link_to "home" , "/" %>
	  </li>
	  <li class='portfolio-nav <%= current_page.data.portfolio_selected_class %>'>
	    <%= link_to "portfolio" , "/portfolio" %>
	  </li>
	  <li class='products-nav <%= current_page.data.products_selected_class %>'>
	    <%= link_to "products" , "/products" %>
	  </li>
	  <li class='open_source-nav <%= current_page.data.open_source_selected_class %>'>
	    <%= link_to "open source" ,"/open_source" %>
	  </li>
	  <li class='people-nav <%= current_page.data.people_selected_class %>'>
	    <%= link_to "people" ,"/people" %>
	  </li>
	  <li class='careers-nav <%= current_page.data.careers_selected_class %>'>
	    <%= link_to "careers" ,"/careers" %>
	  </li>
	  <li class='blog-nav'>
	    <%= link_to "blog" ,"http://blog.c42.in" %>
	  </li>
	  <li class='about_us-nav <%= current_page.data.about_us_selected_class %>'>
	    <%= link_to "about us" ,"/about_us" %>
	  </li>
	  <li class='contact-us-nav <%= current_page.data.contact_us_selected_class %>'>
	    <%= link_to "contact us" ,"/contact_us" %>
	  </li>
	</ul>
      </div>
    </header>

    <main>
      <div class="content">
	<%= yield %>
      </div>
    </main>
    <footer>
      <ul>
	<li class="engineyard">
          <a href="http://www.engineyard.com/partners">
	    <%= image_tag "logo-engineyard-partner.png", :alt => "Engine Yard", :title => "EngineYard" %>
	  </a>
	</li>
	<li class="copyright">Copyright &copy; 2013 C42 Engineering. All rights reserved.</li>
	<li class="linked-in">
          <a href="http://www.linkedin.com/companies/1004056/C42+Engineering">
            <%= image_tag "linkedin-icon.png", :alt => "connect on linkedin", :title => "LinkedIn" %>
	  </a>
	</li>
	<li class="facebook">
          <a href="http://www.facebook.com/pages/C42-Engineering/116320675071889">
            <%= image_tag "facebook-icon.png", :alt => "connect on facebook", :title => "Facebook" %>
          </a>
	</li>
	<li class="email">
          <a href="mailto:business@c42.in">
            <%= image_tag "email-icon.png", :alt => "contact us", :title => "business@c42.in" %>
          </a>
	</li>
      </ul>
    </footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.8.0.min.js"><\/script>')</script>
    <script src="js/plugins.js"></script>

